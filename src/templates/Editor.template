<div class='exercise-sidebar'>
    <div class='exercise-title-container'>
      <h1 class='name'>{{title}}</h1>
      <i class="fa fa-circle completion-status{{#if completed}} completed{{/if}}" aria-hidden="true"></i>
    </div>
    <ul class='tab-bar'>
        {{#each files}}
            <li data-id="{{this.path}}">{{this.name}}</li>
        {{/each}}
    </ul>

    <section class='actions'>
      <button class='run' type="button"><i class="fa fa-play"></i><span class='button-text'>Käynnistä</span></button>
      <button class='test' type="button"><i class="fa fa-refresh"></i><span class='button-text'>Testaa</span></button>
      <button class='reset' type="button"><i class="fa fa-undo"></i><span class='button-text'>Nollaa</span></button>
    </section>
    <hr class="button-separator">
    <section class='actions'>
      <button class='share' type="button"><i class="fa fa-share-alt"></i><span class='button-text'>Jaa</span></button>
    </section>
</div>
